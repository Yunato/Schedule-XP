<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_check_add_want"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yukinaito.schedule_xp.CheckAddWantActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/activity_add_model"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/enclosure_input">
                <TextView
                    android:id="@+id/text_investment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="投資"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:paddingLeft="15px"
                    android:paddingTop="30px"
                    android:paddingRight="15px"
                    android:paddingBottom="30px"
                    android:textColor="@color/input"
                    android:background="@drawable/enclosure_item"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_investment"
                    android:layout_toLeftOf="@+id/add_investment"
                    android:text="個"
                    android:textSize="22sp"
                    android:gravity="right"
                    android:paddingLeft="15px"
                    android:paddingTop="30px"
                    android:paddingRight="15px"
                    android:paddingBottom="30px"
                    android:textColor="@color/colorTextDecided"
                    android:background="@drawable/enclosure_input"/>
                <Button
                    android:id="@+id/add_investment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="追加"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:paddingLeft="15px"
                    android:paddingTop="30px"
                    android:paddingRight="15px"
                    android:paddingBottom="30px"
                    android:textColor="@color/input"
                    android:background="@drawable/enclosure_item"/>

            </RelativeLayout>

            <ListView
                android:id="@+id/list_investment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/enclosure_input">
                <TextView
                    android:id="@+id/text_waste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="浪費"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:paddingLeft="15px"
                    android:paddingTop="30px"
                    android:paddingRight="15px"
                    android:paddingBottom="30px"
                    android:textColor="@color/input"
                    android:background="@drawable/enclosure_item"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/text_waste"
                    android:layout_toLeftOf="@+id/add_waste"
                    android:text="個"
                    android:textSize="22sp"
                    android:gravity="right"
                    android:paddingLeft="15px"
                    android:paddingTop="30px"
                    android:paddingRight="15px"
                    android:paddingBottom="30px"
                    android:textColor="@color/colorTextDecided"
                    android:background="@drawable/enclosure_input"/>
                <Button
                    android:id="@+id/add_waste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="追加"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:paddingLeft="15px"
                    android:paddingTop="30px"
                    android:paddingRight="15px"
                    android:paddingBottom="30px"
                    android:textColor="@color/input"
                    android:background="@drawable/enclosure_item" />

            </RelativeLayout>

            <ListView
                android:id="@+id/list_waste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
