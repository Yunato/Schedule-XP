<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addplan_attime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.example.yukinaito.schedule_xp.AddPlanActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <RelativeLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above = "@+id/relativelayout1">

        <Button
            android:id="@+id/button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="年月日の指定"
            android:textSize="20sp"
            android:elevation="3dp"
            android:layout_marginTop="30px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:tag ="YEARMONTHDAY"
            android:onClick="onClick"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_state" />

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_3"
            android:elevation="3dp"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:background="@drawable/object_corners_true">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="モデル"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_toEndOf="@+id/textview1"
                android:textSize="20sp"
                android:layout_marginTop="10px"
                android:layout_marginBottom="10px"
                android:layout_marginRight="20px"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativelayout"
            android:background="@drawable/under_line"
            android:paddingTop="6px"
            android:paddingBottom="6px">
            <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:layout_marginBottom="25px">
        <View
            android:id="@+id/center_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            />

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="追加"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/center_view"
            android:textSize="20sp"
            android:elevation="3dp"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:tag ="ADD"
            android:onClick="onClick"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_state" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="キャンセル"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/center_view"
            android:textSize="20sp"
            android:elevation="3dp"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:tag ="CANCEL"
            android:onClick="onClick"
            android:background="@drawable/button_state" />
    </RelativeLayout>


</RelativeLayout>
