<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addplan_attime"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.example.yukinaito.schedule_xp.AddMemoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25px">
        <!-- 空の View -->
        <View
            android:id="@+id/center_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            />

        <Button
            android:id="@+id/button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="追加"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/center_view"
            android:textSize="20sp"
            android:elevation="3dp"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:tag ="ADD"
            android:onClick="onClick"
            android:layout_alignParentStart="true"
            android:background="@drawable/button_state" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="キャンセル"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignLeft="@+id/center_view"
            android:textSize="20sp"
            android:elevation="3dp"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:tag ="CANCEL"
            android:onClick="onClick"
            android:background="@drawable/button_state" />
    </RelativeLayout>

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:hint="@string/hint_default1"
        android:textSize="17sp"
        android:minLines="20"
        android:maxLines="20"
        android:gravity="top|left"
        android:elevation="3dp"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="25px"
        android:paddingBottom="25px"
        android:background="@drawable/under_line"
        android:textCursorDrawable="@drawable/style_cursor" />

</RelativeLayout>