<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yukinaito.schedule_xp.AddPlanActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="3dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="日付"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:paddingLeft="15px"
                    android:paddingTop="30px"
                    android:paddingRight="15px"
                    android:paddingBottom="30px"
                    android:textColor="@color/input"
                    android:background="@drawable/enclosure_item"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="締切時刻"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:paddingLeft="15px"
                    android:paddingTop="30px"
                    android:paddingRight="15px"
                    android:paddingBottom="30px"
                    android:textColor="@color/input"
                    android:background="@drawable/enclosure_item" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="内容"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:paddingLeft="15px"
                        android:paddingTop="30px"
                        android:paddingRight="15px"
                        android:paddingBottom="30px"
                        android:textColor="@color/input"
                        android:background="@drawable/enclosure_item"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="場所"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:paddingLeft="15px"
                        android:paddingTop="30px"
                        android:paddingRight="15px"
                        android:paddingBottom="30px"
                        android:textColor="@color/input"
                        android:background="@drawable/enclosure_item"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="メモ"
                        android:textSize="22sp"
                        android:gravity="center"
                        android:paddingLeft="15px"
                        android:paddingTop="30px"
                        android:paddingRight="15px"
                        android:paddingBottom="30px"
                        android:textColor="@color/input"
                        android:background="@drawable/enclosure_item"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/input_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="日付の指定[タップ]"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:paddingLeft="15px"
                    android:paddingTop="30px"
                    android:paddingRight="15px"
                    android:paddingBottom="30px"
                    android:textColor="@color/colorTextUndecided"
                    android:background="@drawable/enclosure_input"/>

                <Button
                    android:id="@+id/input_Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="時刻の指定[タップ]"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:paddingLeft="15px"
                    android:paddingTop="30px"
                    android:paddingRight="15px"
                    android:paddingBottom="30px"
                    android:textColor="@color/colorTextUndecided"
                    android:background="@drawable/enclosure_input" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/input_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="内容を入力"
                        android:textSize="22sp"
                        android:paddingLeft="40px"
                        android:paddingRight="40px"
                        android:paddingTop="25px"
                        android:paddingBottom="25px"
                        android:gravity="top|left"
                        android:textColor="@color/colorTextUndecided"
                        android:background="@drawable/enclosure_input"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/input_place"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="場所を入力"
                        android:textSize="22sp"
                        android:paddingLeft="40px"
                        android:paddingRight="40px"
                        android:paddingTop="25px"
                        android:paddingBottom="25px"
                        android:gravity="top|left"
                        android:textColor="@color/colorTextUndecided"
                        android:background="@drawable/enclosure_input"
                        android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/input_memo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="メモを入力"
                        android:textSize="22sp"
                        android:paddingLeft="40px"
                        android:paddingRight="40px"
                        android:paddingTop="25px"
                        android:paddingBottom="25px"
                        android:gravity="top|left"
                        android:textColor="@color/colorTextUndecided"
                        android:background="@drawable/enclosure_input"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
