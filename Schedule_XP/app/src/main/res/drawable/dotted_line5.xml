<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>
            <solid
                android:color="#757575"
                />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="-2dp"
        android:top="-2dp">

        <shape android:shape="rectangle" >
            <stroke
                android:width="1dp"
                android:color="#424242"
                android:dashWidth="2dp"
                android:dashGap="2dp" />
        </shape>
    </item>
</layer-list>